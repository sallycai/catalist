<div class="panel panel-default">
 <div class="panel-heading"> My Goals </div>

<% @goals.each do |g| %>
 <div class="panel-body">
     <span>Goal: <%= g.name %></span><br>
     <% g.tasks.each do |t| %>
       <li><span>Task: <%= t.name %></span></li>
    <% end %>
    <%= link_to new_task_path(goal_id: g.id) do %>
                 <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
               Add a task
             <% end %>      
    </div>
 <% end %>
</div>
